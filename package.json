{
  "name": "amqp-prosumer",
  "version": "0.3.0",
  "description": "AMQP-based Consumer/Producer tool",
  "repository": {
    "type": "git",
    "url": "github:SorceryStudio/amqp-prosumer"
  },
  "keywords": [
    "amqp",
    "consumer",
    "producer",
    "prosumer",
    "cli"
  ],
  "bin": {
    "amqp-prosumer": "./src/index.js"
  },
  "scripts": {
    "prebuild": "rimraf dist/",
    "build": "tsc --project tsconfig.json && cp package*.json README.md LICENSE.md CHANGELOG.md dist/",
    "pretest": "rimraf dist/",
    "test": "jest src/",
    "test:coverage": "jest src/ --collectCoverage --collectCoverageFrom='src/**/*.ts'",
    "pretest:build": "npm run build",
    "test:build": "cd dist/ && jest src/",
    "lint:check": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format:check": "prettier src/ -c",
    "format:fix": "prettier src/ --write",
    "update:deps": "npm outdated --parseable | awk '{ split($0, a, \":\"); print a[4]; }' | xargs npm install"
  },
  "author": "Grzegorz Godlewski <ggodlewski@sorcerystudio.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/amqplib": "0.5.13",
    "@types/commander": "2.12.2",
    "@types/debug": "4.1.5",
    "@types/jest": "26.0.9",
    "@types/node": "14.0.27",
    "@typescript-eslint/eslint-plugin": "3.9.0",
    "@typescript-eslint/parser": "3.9.0",
    "eslint": "7.6.0",
    "eslint-plugin-immutable": "1.0.0",
    "eslint-plugin-jest": "23.20.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.2.5",
    "jest": "26.3.0",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "ts-jest": "26.1.4",
    "ts-node": "8.10.2",
    "typescript": "3.9.7"
  },
  "dependencies": {
    "amqplib": "0.6.0",
    "commander": "6.0.0",
    "debug": "4.1.1"
  },
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:check && npm run lint:check",
      "pre-push": "npm run test"
    }
  }
}

{
  "name": "amqp-prosumer",
  "version": "1.0.0",
  "description": "AMQP-based Consumer/Producer tool",
  "repository": {
    "type": "git",
    "url": "github:SorceryStudio/amqp-prosumer"
  },
  "keywords": [
    "amqp",
    "consumer",
    "producer",
    "prosumer",
    "cli"
  ],
  "bin": {
    "amqp-prosumer": "./src/index.js"
  },
  "scripts": {
    "prebuild": "rimraf dist/",
    "build": "tsc --project tsconfig.json",
    "postbuild": "cp package*.json README.md LICENSE.md CHANGELOG.md dist/",
    "pretest": "rimraf dist/",
    "test": "jest src/ --detectOpenHandles",
    "test:coverage": "jest src/ --collectCoverage --detectOpenHandles --no-cache",
    "test:badges": "npm run test:coverage && jest-coverage-badges",
    "pretest:build": "npm run build",
    "test:build": "cd dist/ && jest src/",
    "lint": "eslint src/ && tsc --project tsconfig.json --noEmit",
    "lint:fix": "eslint src/ --fix",
    "format:check": "prettier src/ -c",
    "format": "prettier src/ --write",
    "update:deps": "npm outdated --parseable | awk '{ split($0, a, \":\"); print a[4]; }' | xargs npm install",
    "qa": "npm run format && npm run lint && npm run test"
  },
  "author": "Grzegorz Godlewski <ggodlewski@sorcerystudio.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/amqplib": "0.5.16",
    "@types/debug": "4.1.5",
    "@types/jest": "26.0.19",
    "@types/node": "14.14.14",
    "@typescript-eslint/eslint-plugin": "4.10.0",
    "@typescript-eslint/parser": "4.10.0",
    "eslint": "7.15.0",
    "eslint-plugin-immutable": "1.0.0",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.3.0",
    "fast-check": "2.9.0",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "jest-coverage-badges": "1.1.2",
    "jest-mock-extended": "1.0.10",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  },
  "dependencies": {
    "amqplib": "0.6.0",
    "commander": "6.2.1",
    "debug": "4.3.1"
  },
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:check && npm run lint",
      "pre-push": "npm run test:coverage"
    }
  }
}
